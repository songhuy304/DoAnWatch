@model IEnumerable<DoAnWatch.Models.OrderDetail>
    
<table class="table table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên Sản Phẩm</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Total</th>
            <th></th>



        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            var i = 1;

            foreach (var item in Model)
            {


                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Price * item.Quantity)</td>
                    
                </tr>
                i = i + 1;
            }
        }
        else
        {
            <tr>
                <td colspan="4">  </td>
            </tr>
        }
    </tbody>
</table>


