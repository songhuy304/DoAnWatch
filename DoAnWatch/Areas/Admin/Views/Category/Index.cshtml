@model PagedList.PagedList<DoAnWatch.Models.Category>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh Mục   ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{

    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Contact</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quả lý Danh Mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"> Danh Mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh Sách Danh Mục</h3>

            <div class="card-tools">
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {

                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string)<input type="submit" value="Search" class="btn btn-primary" />
                }
                <a href="/admin/category/add" class="btn btn-primary">Thêm Mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên Danh Mục</th>
                        <th>Thứ Tự</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@item.Position</td>
                                <td>
                                    <a href="/admin/product/edit/@item.Id " class=" btn btn-primary">Sửa</a>
                                    <a href="#"onclick="if (confirm('are you sure') == true) location.href = '/admin/product/delete/@item.Id'" class=" btn btn-danger">Xóa</a>

                                    
                                </td>
                            </tr>
                            //i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">  </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page , currentFilter = ViewBag.CurrentFilter}))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    
}

